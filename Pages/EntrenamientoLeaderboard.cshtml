@page
@model Sprint3.Pages.EntrenamientoLeaderboardModel
@{
    ViewData["Title"] = "Entrenamiento";
}

<div class="container">
    <!-- Leaderboard -->
    <div class="imagenBackground">

        <!-- Escoger Opción: Leaderboard de Examen o Entrenamiento o Indicadores-->
        <div class="botonesranking center row top">

            <div class="col s5">
                <a href="@Url.Page("/EntrenamientoLeaderboard")" class="btn white-text" id="botonesLeaderboard"><i class="material-icons left">cloud</i>Entrenamiento</a>
            </div>

            <div class="col s3">
                <a href="@Url.Page("/ExamenLeaderboard")" class="btn white-text" id="botonesLeaderboard"><i class="material-icons left">cloud</i>Examen</a>
            </div>

            <div class="col s4">
                <a href="@Url.Page("/IndicadoresLeaderboard")" class="btn white-text" id="botonesLeaderboard"><i class="material-icons left">cloud</i>Indicadores</a>
            </div>

        </div>

        <!-- Medallas
        Usuario más alto durante el mes = medalla de oro
        Segundo usuario más alto durante el mes = medalla de oro
        Tercer usuario más alto durante el mes = medalla de bronze
        -->

        <div class="top">
            <table class="ranking centered white-text">
                <thead>
                    <tr>
                        <th>Ranking</th>
                        <th>Nombre</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaEntrenamiento)
                    {
                        <tr>
                            <!-- Lugar -->
                            <td>
                                @Html.DisplayFor(modelItem => item.posicion)
                            </td>

                            <!-- Nombre -->
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>

                            <!-- Score -->
                            <td>
                                @Html.DisplayFor(modelItem => item.score)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>