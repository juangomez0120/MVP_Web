@page
@model Sprint3.Pages.ExamenLeaderboardModel
@{
    ViewData["Title"] = "Leaderboard";
}

<div class="container">
    <!-- Leaderboard -->
    <div>

        <!-- Escoger Opción: Leaderboard de Examen o Entrenamiento o Indicadores-->
        <div class="centered row top" style="font-family: 'Oswald', sans-serif; font-size: 24px;">

            <div class="col s3">
                <a href="@Url.Page("/EntrenamientoLeaderboard")" class="greyForRanking">Entrenamiento</a>
            </div>

            <div class="col s3 offset-s2">
                <a href="@Url.Page("/ExamenLeaderboard")" class="red1">Examen</a>
            </div>

            <div class="col s3 offset-s1">
                <a href="@Url.Page("/IndicadoresLeaderboard")" class="greyForRanking">Indicadores</a>
            </div>

        </div>

        <div class="row"></div>

        <div class="head-indicadores">
            <h5 class="center-align greyDark">Top 10 de mejores resultados en examenen</h5>
        </div>

        <div class="top">
            <table class="centered greyDark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Puntos</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListaExamenes != null)
                    {
                        @for (var i = 1; i <= Model.ListaExamenes.Count; i++)
                        {
                            <tr>
                                <!-- Lugar -->
                                <td>
                                    @if (i == 1)
                                    {
                                        <img src="img/medalla_oro.png" class="imagenMedalla" />
                                    }
                                    else if (i == 2)
                                    {
                                        <img src="img/medalla_plata.png" class="imagenMedalla" />
                                    }
                                    else if (i == 3)
                                    {
                                        <img src="img/medalla_bronze.png" class="imagenMedalla" />
                                    }
                                    else
                                        @i
                                </td>

                                <!-- Nombre -->
                                <td>
                                    @Html.DisplayFor(modelItem => Model.ListaExamenes[i - 1].username)
                                </td>

                                <!-- Score -->
                                <td>
                                    @Html.DisplayFor(modelItem => Model.ListaExamenes[i - 1].score)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>