@page
@model Sprint3.Pages.PerfilModel
@{
    ViewData["Title"] = "Perfil";
}

<div class="" style="font-family: 'Oswald', sans-serif;">
    <div class="row">
        <div class="col s12 m8">
            <h4 class="center-align greyForRanking">Historial de Examenes</h4>
            <div class="row">
                <div class="col s12">
                    <table class="centered greyDark">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Examen</th>
                                <th>Puntaje</th>
                                <th>Mes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListaExamenes != null)
                            {
                                @foreach (var item in Model.ListaExamenes)
                                {
                                    <tr>
                                        <!-- Número -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.num)
                                        </td>

                                        <!-- Puntaje -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.examen)
                                        </td>

                                        <!-- Racha -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.score)
                                        </td>

                                        <!-- Fecha -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mes)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <h4 class="center-align greyForRanking">Historial de Entrenamientos</h4>
                    <div class="row">
                        <div class="col 12">
                            <table class="centered greyDark">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Puntaje</th>
                                        <th>Racha Máxima</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ListaEntrenamiento != null)
                                    {
                                        @foreach (var item in Model.ListaEntrenamiento)
                                        {
                                            <tr>
                                                <!-- Número -->
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.numero)
                                                </td>

                                                <!-- Puntaje -->
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.puntaje)
                                                </td>

                                                <!-- Racha -->
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.racha)
                                                </td>

                                                <!-- Fecha -->
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.fecha)
                                                </td>
                                            </tr>
                                        }
                                    }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m3 offset-m1">
            <h4 class="center-align greyForRanking">Medallas</h4>

            <div class="row">
                <div class="col s12">
                    <h6 class="greyDark">Categoría Exámenes</h6>
                    <div class="row">
                        <div class="col 12">
                            @if (Model.ListaMedallas[0] != null)
                            {
                                @foreach (string item in Model.ListaMedallas[0])
                                {
                                    <img src="img/medalla_oro.png" class="imagenMedalla tooltipped" data-position="top" data-tooltip="@item" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <h6 class="greyDark">Categoría Inmunidad</h6>
                    <div class="row">
                        <div class="col 12">
                            @if (Model.ListaMedallas[1] != null)
                            {
                                @foreach (var item in Model.ListaMedallas[1])
                                {
                                    <img src="img/medalla_oro.png" class="imagenMedalla tooltipped" data-position="top" data-tooltip="@item" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
    
            <div class="row">
                <div class="col s12">
                    <h6 class="greyDark">Categoría Ranking</h6>
                    <div class="row">
                        <div class="col 12">
                            @if (Model.ListaMedallas[2] != null)
                            {
                                @foreach (var item in Model.ListaMedallas[2])
                                {
                                    <img src="img/medalla_oro.png" class="imagenMedalla tooltipped" data-position="top" data-tooltip="@item" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>