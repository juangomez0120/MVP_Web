            @*Entrenamientos*@
            <div class="row">
                <div class="col s12">
                    @*Titulo*@
                    <h4 class="center-align greyForRanking">Historial de Entrenamientos</h4>
                    <div class="row">
                        <div class="col 12">
                            <table class="centered greyDark">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Puntaje</th>
                                        <th>Racha Máxima</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListaEntrenamiento)
                                    {
                                    <tr>
                                        <!-- Número -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.numero)
                                        </td>

                                        <!-- Puntaje -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.puntaje)
                                        </td>

                                        <!-- Racha -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.racha)
                                        </td>

                                        <!-- Fecha -->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fecha)
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
