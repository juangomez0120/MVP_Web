@page
@model IndexModel
@{
    ViewData["Title"] = "Log-In";
}

<div class="container">
    <div class="row">
        <form method="post">
            <div class="contenido col s12 m10 offset-m1 l8 offset-l2">
                <h2 class="texto center-align">El Gran Escape</h2>
                <div class="row">
                    <div class="input-field col s6 offset-s3">
                        <i class="material-icons prefix">account_circle</i>
                        <input placeholder="Usuario" type="text" id="autocomplete-input1" class="validate" asp-for="Usuario.username">
                    </div>
                </div>
                <div id="passwordrow" class="row">
                    <div id="passwordcoli" class="passwordcolc input-field col s6 offset-s3">
                        <i class="material-icons prefix">lock</i>
                        <input placeholder="Contraseña" type="password" id="autocomplete-input2" class="validate" asp-for="Password">
                    </div>
                </div>
                    <p class="credencialesinvalidas">@Model.MensajeError</p>
                <div class="row">
                    <a class="olvidastecontrasena btn-flat col s6 offset-s6">¿Olvidaste tu Contraseña?</a>
                </div>
                <div class="row">
                    <input type="submit" id="botonlogin" class="btn col s4 offset-s4" value="Iniciar Sesión">
                </div>
            </div>
        </form>
    </div>
</div>