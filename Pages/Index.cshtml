@page
@model IndexModel
@{
    ViewData["Title"] = "Log-In";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" style="height:100vh">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sprint3</title>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body id="bodyLogin">
    <header>
    </header>

    <!-- Primera página que ve el usuario cuando se mete es la del leaderboard -->
        <main role="main">
                <div class="row">
                    <form method="post">
                        <div class="contenido col s12 m5 l4">
                            <div class="row">
                                <img id="logoTerniumLogin" src="~/img/logoTernium.png" class="col s8 m5 l5" />
                            </div>
                            <h2 class="texto center-align">El Gran Escape</h2>
                            <div class="row" style="margin-top: 5%; margin-bottom: 0">
                                <div class="input-field col s6 offset-s3">
                                    <input placeholder="Usuario" type="text" id="autocomplete-input1" class="validate" asp-for="UsernameUsuario">
                                </div>
                            </div>
                            <div id="passwordrow" class="row">
                                <div id="passwordcoli" class="passwordcolc input-field col s6 offset-s3">
                                    <input placeholder="Contraseña" type="password" id="autocomplete-input2" class="validate" asp-for="PasswordUsuario">
                                </div>
                            </div>
                            <p class="credencialesinvalidas">@Model.MensajeError</p>
                            <div class="row">
                                <input type="submit" id="botonlogin" class="btn col s4 offset-s4" value="Iniciar Sesión">
                            </div>
                        </div>
                        <div class="col s8" >
                        </div>
                    </form>
                </div>

        </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
